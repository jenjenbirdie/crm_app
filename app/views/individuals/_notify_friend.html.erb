<%= form_tag(notify_friend_individual_path(@individual), :id => 'notify_friend_form', 
:style => 'display:none') do %>

<div class="field">
	<%= label_tag :name, 'Your name' %><br />
	<%= text_field_tag :name %>
</div>
<div class="field">
	<%= label_tag :email, 'Email Address' %><br />
	<%= text_field_tag :email %>
</div>
<div class="actions">
	<%= submit_tag 'Send' %> or 
	<%= link_to 'Cancel', '#',:onclick => "$('notify_friend_form').slideup()" %>
</div>

<% end %>